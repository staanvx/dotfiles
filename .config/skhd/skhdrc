# focus window
ctrl + cmd - h : yabai -m window --focus west
ctrl + cmd - j : yabai -m window --focus south
ctrl + cmd - k : yabai -m window --focus north
ctrl + cmd - l : yabai -m window --focus east

# swap managed window
shift + alt - h : yabai -m window --swap north

# move managed window
ctrl + shift + alt + cmd - h : yabai -m window --warp west
ctrl + shift + alt + cmd - j : yabai -m window --warp south
ctrl + shift + alt + cmd - k : yabai -m window --warp north
ctrl + shift + alt + cmd - l : yabai -m window --warp east

# fast focus desktop
ctrl + shift + alt - k : yabai -m space --focus recent
ctrl + shift + alt - 1 : yabai -m space --focus 1
ctrl + shift + alt - 2 : yabai -m space --focus 2
ctrl + shift + alt - 3 : yabai -m space --focus 3
ctrl + shift + alt - 4 : yabai -m space --focus 4
ctrl + shift + alt - 5 : yabai -m space --focus 5
ctrl + shift + alt - 6 : yabai -m space --focus 6
ctrl + shift + alt - 7 : yabai -m space --focus 7
ctrl + shift + alt - 8 : yabai -m space --focus 8
ctrl + shift + alt - 9 : yabai -m space --focus 9

# send window to desktop and follow focus
ctrl + shift + alt + cmd - 1 : yabai -m window --space 1; yabai -m space --focus 1
ctrl + shift + alt + cmd - 2 : yabai -m window --space 2; yabai -m space --focus 2
ctrl + shift + alt + cmd - 3 : yabai -m window --space 3; yabai -m space --focus 3
ctrl + shift + alt + cmd - 4 : yabai -m window --space 4; yabai -m space --focus 4
ctrl + shift + alt + cmd - 5 : yabai -m window --space 5; yabai -m space --focus 5
ctrl + shift + alt + cmd - 6 : yabai -m window --space 6; yabai -m space --focus 6
ctrl + shift + alt + cmd - 7 : yabai -m window --space 7; yabai -m space --focus 7
ctrl + shift + alt + cmd - 8 : yabai -m window --space 8; yabai -m space --focus 8
ctrl + shift + alt + cmd - 9 : yabai -m window --space 9; yabai -m space --focus 9

# increase window size
#shift + alt - h : yabai -m window --resize left:-20:0
#shift + alt - k : yabai -m window --resize top:0:-20

# decrease window size
# shift + cmd - s : yabai -m window --resize bottom:0:-20
# shift + cmd - w : yabai -m window --resize top:0:20

# set insertion point in focused container
# ctrl + alt - h : yabai -m window --insert west

# toggle window zoom
ctrl + shift + alt + cmd - c : yabai -m window --toggle zoom-fullscreen
ctrl + shift + alt + cmd - f : yabai -m window --toggle native-fullscreen

# toggle window split type
# alt - e : yabai -m window --toggle split

# float / unfloat window and center on screen
ctrl + shift + alt - space : yabai -m window --toggle float --grid 4:4:1:1:2:2

# launch apps
ctrl + shift + alt - f : open -a Finder
ctrl + shift + alt - w : open '/Applications/Brave Browser.app'
ctrl + shift + alt - i : open '/Applications/Firefox.app'
ctrl + shift + alt - o : open '/Applications/LibreOffice.app'
ctrl + shift + alt - l : open '/Applications/Zathura.app'
ctrl + shift + alt - e : open '/Applications/Emacs.app'
ctrl + shift + alt - g : open '/Applications/Ghostty.app'
ctrl + shift + alt - t : open '/Applications/Telegram.app'
ctrl + shift + alt - return : open '/Applications/kitty.app'

ctrl + alt - r : yabai --restart-service

ctrl + shift + alt - p : /bin/zsh -lc 'rmpc togglepause'

